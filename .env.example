# Required for LLM (GROQ qwen3-32b)
GROQ_API_KEY=your_groq_api_key_here

# Optional: fallback GROQ key and model when primary fails (e.g. rate limit)
GROQ_API_KEY_FALLBACK=
GROQ_MODEL_FALLBACK=meta-llama/llama-guard-4-12b

# PostgreSQL with TimescaleDB
DATABASE_URL=postgresql://user:password@localhost:5432/analyse_stocks

# Alpha Vantage REST API
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Optional: financial news API (NewsData.io, https://newsdata.io) for ticker-specific news in chat search
# FINANCIAL_NEWS_API_KEY=

# Dev mode: no real API or LLM calls; use mocks (set to 1, true, or yes; or RUN_MODE=dev)
# DEV_MODE=0

# Frontend API base URL
NEXT_PUBLIC_API_URL=http://localhost:8000
